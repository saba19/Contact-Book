{% extends "base.html.twig" %}
{% block title %}Address book{% endblock %}
{% block content %}
<br><br>
<h2>Contacts:</h2>
<table class="table table-hover">
    <thead class="thead-light">
    <tr>
        <th scope="col"></th>
        <th scope="col">Surname</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
{% set i = 1 %}
      {% for user in  allUsers %}
          <tr>
              <th scope="row">{{ i }}</th>{% set i = i + 1 %}
              <td>{{ user.surname }}</td>
              <td><a href="{{ path('newproject_upuser_showperson', {'id': user.id}) }}">{{ user.name }}</a></td>
              <td>{{ user.description }}</td>
              <td>
                  <a class="btn btn-outline-primary" href="{{ path('newproject_upuser_showperson', {'id': user.id}) }}">Personal Details</a>
                  <a class="btn btn-outline-primary" href="{{ path('newproject_upuser_modify', {'id': user.id}) }}">Edit</a>
                  <a class="btn btn-outline-danger" href="{{ path('newproject_upuser_delete', {'id': user.id}) }}">Delete</a>
              </td> <br>
          </tr>
      {% else %}
          <h3>No people in addressbook!</h3>
      {% endfor %}
<a class="btn btn-outline-primary" href="{{ path('newproject_upuser_new') }}">New person</a>
    </tbody>
</table>
{% endblock %}
